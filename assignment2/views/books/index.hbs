<h1>{{title}}</h1>

<a href="/books/add">Add a new book</a>


{{!-- To Show data --}}
<table class="table table-striped table-hover">
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Genre</th>
    <th>Cover</th>
  </thead>
  {{#each dataset}}
  <tr>
    <td>{{this.title}}</Td>
    <td>{{this.author}}</Td>
    <td>{{this.genre}}</Td>
    <td><img src="{{this.image}}"></Td>
  </tr>
  {{/each}}
</table>