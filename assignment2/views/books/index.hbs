<h1>{{title}}</h1>

<a href="/books/add">Add a new book</a>



<table class="table table-striped table-hover">
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Genre</th>
    <th>Cover</th>
    <th>Actions</th>
  </thead>
  {{#each dataset}}
  <tr>
    <td>{{this.title}}</Td>
    <td>{{this.author}}</Td>
    <td>{{this.genre}}</Td>
    <td><img src="{{this.image}}"></Td>
    <td>
      <a href="/books/edit/{{this._id}}">Edit</a>
      <a href="/books/delete/{{this._id}}" onclick="return confirmDeletion()">Delete</a>
    </td>
  </tr>
  {{/each}}
</table>