<h1>{{title}}</h1>
{{#if user}}
<a href="/reviews/add">Add a new Review</a>
{{/if}}
<table class="table table-striped table-hover">
  <thead>
    <th>Title</th>
    <th>Reviewer</th>
    <th>Book</th>
    <th>Body</th>
    {{#if user}}
    <th>Actions</th>
    {{/if}}
  </thead>
  {{#each dataset}}
  <tr>
    <td>{{this.title}}</Td>
    <td>{{this.reviewer}}</Td>
    <td>{{this.book}}</Td>
    <td>{{this.body}}</Td>
    {{#if ../user}}
    <td>
    <a href="/reviews/edit/{{this._id}}" class="btn btn-info">Edit</a>
    <a href="/reviews/delete/{{this._id}}" onclick="return confirmDeletion()" class="btn btn-danger">Delete</a>
    </td>
    {{/if}}
  </tr>
  {{/each}}
</table>