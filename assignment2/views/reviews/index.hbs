<h1>{{title}}</h1>
<a href="/reviews/add">Add a new Review</a>

<table class="table table-striped table-hover">
  <thead>
    <th>Title</th>
    <th>Reviewer</th>
    <th>Book</th>
    <th>Body</th>
  </thead>
  {{#each dataset}}
  <tr>
    <td>{{this.title}}</Td>
    <td>{{this.reviewer}}</Td>
    <td>{{this.book}}</Td>
    <td>{{this.body}}</Td>
  </tr>
  {{/each}}
</table>